<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/infidele_db</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password"></property>
        <property name="hibernate.dialect">org.hibernate.dialect.MariaDBDialect</property>
        <property name="show_sql">true</property>
		<property name="hibernate.hbm2ddl.auto">update</property>
        <mapping class="com.Modele.Ville"/> 
        <mapping class="com.Modele.Zone"/> 
        <mapping class="com.Modele.Partenaire"/> 
        <mapping class="com.Modele.Produit"/> 
        <mapping class="com.Modele.Parking"/> 
        <mapping class="com.Modele.TransportCommun"/> 
        <mapping class="com.Modele.CarteInfidelite"/> 
        <mapping class="com.Modele.Client"/> 
        <mapping class="com.Modele.Abonne"/> 
        <mapping class="com.Modele.Vente"/> 
        <mapping class="com.Modele.Aproduit"/> 
        <mapping class="com.Modele.Cadeau"/> 
        <mapping class="com.Modele.Abonne"/> 
        <mapping class="com.Modele.Operation"/> 
    </session-factory>
</hibernate-configuration>