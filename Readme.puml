package Composite{
    abstract  AProduit{
        getCost():double
    }
    class Produit{
        istrategie : IStrategie
        getCost():double
    }
    class CatalogueCadeau{
        getCost() : double
    }
    class Cadeau{
        getCost():double
    }
    Produit -left-|> AProduit
    Cadeau -up-|> Produit
    CatalogueCadeau -up-|> AProduit
    CatalogueCadeau *-up- "1..*" AProduit
    
}


